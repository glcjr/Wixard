<Window x:Class="Wixard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wixard"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Wixard" Height="600" Width="843" FontSize="14" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*" />
            <RowDefinition Height="90*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="btnFileOpen" MaxWidth="100" Click="btnFileOpen_Click" >
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Resource\folder.png" />
                    </StackPanel>
                </Button>
                <Button x:Name="btnFileSave" MaxWidth="100" Click="btnFileSave_Click" >
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Resource\save.png" />
                    </StackPanel>
                </Button>
                <Button x:Name="btnFileSaveAs" MaxWidth="100" Click="btnFileSaveAs_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Resource\saveas.png"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btnEditor" MaxWidth="100" Click="btnEditor_Click" >
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Resource\editor.png"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btnOptions" MaxWidth="100" Click="btnOptions_Click" >
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Resource\options.png"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btncompile" Grid.Row="0" MaxWidth="100" Click="btncompile_Click" >
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Resource\compiler.png"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btnabout" Grid.Row="0" MaxWidth="100" Click="btnabout_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Resource\info.png"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="80*"/>
            </Grid.ColumnDefinitions>
            <Grid x:Name="SideBar" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="22*"/>
                    <ColumnDefinition Width="145*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.ColumnSpan="2">
                    <Viewbox>
                        <Button x:Name="btnAppInfoPanel" MinWidth="{Binding ElementName=btnFW, Path=ActualWidth}" Content="ApplicationInfo"  Click="btnAppInfoPanel_Click" />
                    </Viewbox>
                    <Viewbox>
                        <Button x:Name="btnSF" Content="Source Files" MinWidth="{Binding ElementName=btnFW, Path=ActualWidth}" Click="btnSF_Click" />
                    </Viewbox>
                    <Viewbox>
                        <Button x:Name="btnSetupOptionsPanel" Content="Setup Options"  Click="btnSetupOptionsPanel_Click" MinWidth="{Binding ElementName=btnFW, Path=ActualWidth}"  />
                    </Viewbox>
                    <Viewbox>
                        <Button x:Name="btnSigningInfo" Content="Signing Info"  Click="btnSigningInfo_Click" MinWidth="{Binding ElementName=btnFW, Path=ActualWidth}"  />
                    </Viewbox>
                    <Viewbox>
                        <Button x:Name="btnFeat" Content="Features" MinWidth="{Binding ElementName=btnFW, Path=ActualWidth}" Click="btnFeat_Click" />
                    </Viewbox>
                    <Viewbox>
                        <Button x:Name="btnEvars" Content="EnvironmentVars" MinWidth="{Binding ElementName=btnFW, Path=ActualWidth}" Click="btnEvars_Click"   />
                    </Viewbox>
                    <Viewbox>
                        <Button x:Name="btnRV" Content="Registry" MinWidth="{Binding ElementName=btnFW, Path=ActualWidth}" Click="btnRV_Click" />
                    </Viewbox>
                    <Viewbox>
                        <Button x:Name="btnFA" Content="File Associations" MinWidth="{Binding ElementName=btnFW, Path=ActualWidth}" Click="btnFA_Click" />
                    </Viewbox>

                    <Viewbox>
                        <Button x:Name="btnFW" Content="Firewall Exceptions" Click="btnFW_Click" />
                    </Viewbox>

                    <Viewbox>
                        <Button x:Name="btnUsers" Content="Users" Click="btnUsers_Click" MinWidth="{Binding ElementName=btnFW, Path=ActualWidth}"   />
                    </Viewbox>
                    <Viewbox>
                        <Button x:Name="btnCertificates" Content="Certificates" Click="btnCertificates_Click" MinWidth="{Binding ElementName=btnFW, Path=ActualWidth}"   />
                    </Viewbox>
                    <Viewbox>
                        <Button x:Name="btnEles" Content="Wix Elements" MinWidth="{Binding ElementName=btnFW, Path=ActualWidth}" Click="btnEles_Click" />
                    </Viewbox>
                    
                    
                </StackPanel>


            </Grid>

            <Grid x:Name="AppInfo" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Visibility="Hidden">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40*"/>
                    <ColumnDefinition Width="60*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Viewbox Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0">
                    <Label Content="Application Information" HorizontalAlignment="Center" />
                </Viewbox>
                <Viewbox Grid.Column="0" Grid.Row="2" HorizontalAlignment="Left" Stretch="Uniform">
                    <Label Content="Application Name" />
                </Viewbox>
                <Viewbox Grid.Column="0" Grid.Row="3" HorizontalAlignment="Left" Stretch="Uniform">
                    <Label Content="Version" />
                </Viewbox>
                <Viewbox Grid.Column="0" Grid.Row="4" HorizontalAlignment="Left" Stretch="Uniform">
                    <Label Content="Publisher Name"  />
                </Viewbox>
                <Viewbox Grid.Column="0" Grid.Row="5" HorizontalAlignment="Left" Stretch="Uniform">
                    <Label Content="Help Link" />
                </Viewbox>
                <Viewbox Grid.Column="0" Grid.Row="6" HorizontalAlignment="Left" Stretch="Uniform">
                    <Label Content="Application Icon" />
                </Viewbox>
                <Viewbox Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" Stretch="Uniform" >
                    <TextBox x:Name="txtAppName" MinWidth="160" Text="{Binding ApplicationName}"/>
                </Viewbox>
                <Viewbox Grid.Column="1" Grid.Row="3"  HorizontalAlignment="Left" Stretch="Uniform">
                    <TextBox x:Name="txtAppVersion" MinWidth="160" Text="{Binding AppVersion}"/>
                </Viewbox>
                <Viewbox Grid.Column="1" Grid.Row="4" HorizontalAlignment="Left" Stretch="Uniform">
                    <TextBox x:Name="txtPubName" MinWidth="160" Text="{Binding PublisherName}"/>
                </Viewbox>
                <Viewbox Grid.Column="1" Grid.Row="5" HorizontalAlignment="Left" Stretch="Uniform">
                    <TextBox x:Name="txtHelpLink" MinWidth="160" Text="{Binding HelpLink}" />
                </Viewbox>
                <Grid Grid.Column="1" Grid.Row="6" Grid.RowSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70*"/>
                        <ColumnDefinition Width="30*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Viewbox Grid.Column="0" Grid.RowSpan="2">
                        <Image x:Name="Appicon" Source="{Binding IconLocation, UpdateSourceTrigger=PropertyChanged}"/>
                    </Viewbox>
                    <Viewbox Grid.Column="1" Grid.Row="0">
                        <Button x:Name="btnchangeicon" Content="Find" Click="Btnchangeicon_Click"/>
                    </Viewbox>
                </Grid>
            </Grid>
            <Grid x:Name="SetupOptionsPanel" Grid.Column="1" Visibility="Hidden">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40*"/>
                    <ColumnDefinition Width="60*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Viewbox Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0">
                    <Label Content="Setup Options" HorizontalAlignment="Center" />
                </Viewbox>
                <Viewbox Grid.Row="1" HorizontalAlignment="Left" Stretch="Uniform">
                    <CheckBox x:Name="cbincludeuninstall" Content="Include Uninstall" IsChecked="{Binding IncludeUninstall}"/>
                </Viewbox>
                <Viewbox Grid.Row="2" HorizontalAlignment="Left" Stretch="Uniform">
                    <CheckBox x:Name="cboptionalshortcut" Content="Optional Shortcut" IsChecked="{Binding OptionDesktopShortcut}"/>
                </Viewbox>
                <Viewbox Grid.Row="3" HorizontalAlignment="Left" Stretch="Uniform">
                    <CheckBox x:Name="cb64bit" Content="Target 64bit Setup" IsChecked="{Binding SixtyfourBitSetup}" />
                </Viewbox>
                <Viewbox Grid.Row="4" HorizontalAlignment="Left" Stretch="Uniform">
                    <CheckBox x:Name="cbpromptforreboot" Content="Prompt for reboot" IsChecked="{Binding PromptReboot}"/>
                </Viewbox>
                <Viewbox Grid.Row="5" HorizontalAlignment="Left" Stretch="Uniform">
                    <CheckBox x:Name="cbnetframework" Content="Need Net Framework" Checked="cbnetframework_Checked" Click="cbnetframework_Checked"/>
                </Viewbox>
                <Grid x:Name="NetFrameworkPanel" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="6" Grid.RowSpan="2" Visibility="Hidden">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40*"/>
                        <ColumnDefinition Width="60*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Viewbox Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" Stretch="Uniform">
                        <Label Content="Minimum Net Required" />
                    </Viewbox>
                    <Viewbox Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" Stretch="Uniform">
                        <ComboBox x:Name="comborequirednet" SelectedItem="{Binding MinimumNet}" ItemsSource="{Binding NetIDDetect}"></ComboBox>
                    </Viewbox>
                    <Viewbox Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left" Stretch="Uniform">
                        <Label Content="Install Net Framework" />
                    </Viewbox>
                    <Viewbox Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Stretch="Uniform">
                        <ComboBox x:Name="comboinstallnet" SelectedItem="{Binding InstallNet}" ItemsSource="{Binding NetIDInstall}"></ComboBox>
                    </Viewbox>
                </Grid>
            </Grid>
            <Grid x:Name="SigningPanel" Grid.Column="1" Visibility="Hidden">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40*"/>
                    <ColumnDefinition Width="60*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Viewbox Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0">
                    <Label Content="Signing Information" HorizontalAlignment="Center" />
                </Viewbox>
                <Viewbox Grid.Column="0" Grid.Row="3">
                    <Label Content="Certificate Location" />
                </Viewbox>
                <Viewbox Grid.Column="0" Grid.Row="4">
                    <Label Content="Password" />
                </Viewbox>
                <Viewbox Grid.Column="0" Grid.Row="5">
                    <Label Content="Timestamp Url" />
                </Viewbox>
                <Viewbox Grid.Column="0" Grid.Row="6">
                    <Label Content="Options" />
                </Viewbox>
                <Viewbox Grid.Column="0" Grid.Row="2">
                    <CheckBox Content="Sign Installer" IsChecked="{Binding SignInstaller}" />
                </Viewbox>
                <Viewbox Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" Stretch="Uniform" >
                    <TextBox x:Name="txtCertPath" MinWidth="160" Text="{Binding CertificatePath}" />
                </Viewbox>
                <Viewbox Grid.Column="1" Grid.Row="4" HorizontalAlignment="Left" Stretch="Uniform" >
                    <TextBox x:Name="txtPasswprd" MinWidth="160" Text="{Binding CertificatePassword}"/>
                </Viewbox>
                <Viewbox Grid.Column="1" Grid.Row="5" HorizontalAlignment="Left" Stretch="Uniform" >
                    <TextBox x:Name="txttimestamp" MinWidth="160" Text="{Binding TimestampUrl}" />
                </Viewbox>
                <Viewbox Grid.Column="1" Grid.Row="6" HorizontalAlignment="Left" Stretch="Uniform" >
                    <TextBox x:Name="txtoptions" MinWidth="160" Text="{Binding CertificateOptions}"/>
                </Viewbox>
            </Grid>
            <Grid x:Name="CertificatesGrid" Grid.Column="1" Visibility="Hidden">
                <Grid.RowDefinitions>
                    <RowDefinition Height="12*" />
                    <RowDefinition Height="60*" />
                    <RowDefinition Height="40*" />
                    <RowDefinition Height="10*" />
                </Grid.RowDefinitions>
                <Viewbox Grid.Row="0">
                    <Label  Content="Certificates" HorizontalAlignment="Center"/>
                </Viewbox>
                <Grid x:Name="CertList" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20*"/>
                        <ColumnDefinition Width="70*"/>
                        <ColumnDefinition Width="30*"/>
                    </Grid.ColumnDefinitions>
                    <ListBox x:Name="CertsList" Grid.Column="1" FontSize="20" ScrollViewer.VerticalScrollBarVisibility="Visible" MaxHeight="{Binding ElementName=CertList, Path=ActualHeight}" ItemsSource="{Binding Certslist}" SelectionChanged="CertsList_SelectionChanged" />
                    <Grid x:Name="ListButtons" Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Viewbox Grid.Row="1">
                            <Button x:Name="btnAddCert" Content="Add" MinWidth="60" Click="btnAddCert_Click"/>
                        </Viewbox>
                        <Viewbox Grid.Row="2">
                            <Button x:Name="btnRmvCert" Content="Remove" MinWidth="60" Click="btnRmvCert_Click"/>
                        </Viewbox>
                    </Grid>
                </Grid>
                <Grid x:Name="AddNew" Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40*"/>
                        <ColumnDefinition Width="60*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Viewbox Grid.Column="0" Grid.Row="0">
                        <Label x:Name="lblcertname" Content="Certificate Name:" />
                    </Viewbox>
                    <Viewbox Grid.Column="0" Grid.Row="1">
                        <Label Content="Certificate Path:" />
                    </Viewbox>
                    <Viewbox Grid.Column="0" Grid.Row="2">
                        <Label Content="Store Location:" />
                    </Viewbox>
                    <Viewbox Grid.Column="0" Grid.Row="3">
                        <Label Content="Store Name:" />
                    </Viewbox>
                    <Viewbox Grid.Column="0" Grid.Row="4">
                        <Label Content="Authority Request:" />
                    </Viewbox>
                    <Viewbox Grid.Column="1" Grid.Row="0">
                        <TextBox MinWidth="160" HorizontalAlignment="Left" Text="{Binding CertificateName}" />
                    </Viewbox>
                    <Grid Grid.Column="1" Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="70*"/>
                            <ColumnDefinition Width="20*"/>
                        </Grid.ColumnDefinitions>
                        <Viewbox Grid.Column="0">
                            <TextBox MinWidth="140" HorizontalAlignment="Left" Text="{Binding CertPath}" />
                        </Viewbox>
                        <Viewbox Grid.Column="1">
                            <Button x:Name="btnGetCerPath" MinWidth="60" Content="Find" Click="btnGetCerPath_Click" />
                        </Viewbox>
                    </Grid>
                    <Viewbox Grid.Column="1" Grid.Row="2">
                        <ComboBox MinWidth="160" SelectedValue="{Binding CertLocation}" >
                            <sys:String>currentUser</sys:String>
                            <sys:String>localMachine</sys:String>
                        </ComboBox>
                    </Viewbox>
                    <Viewbox Grid.Column="1" Grid.Row="3">
                        <ComboBox MinWidth="160" SelectedValue="{Binding CertStore}" >
                            <sys:String>ca</sys:String>
                            <sys:String>my</sys:String>
                            <sys:String>personal</sys:String>
                            <sys:String>request</sys:String>
                            <sys:String>root</sys:String>
                            <sys:String>otherPeople</sys:String>
                            <sys:String>trustedPeople</sys:String>
                            <sys:String>trustedPublisher</sys:String>
                        </ComboBox>
                    </Viewbox>
                    <Viewbox Grid.Column="1" Grid.Row="4">
                        <CheckBox IsChecked="{Binding CertAuthorityRequest}" />
                    </Viewbox>
                    <Viewbox Grid.Column="1" Grid.Row="5">
                        <Button x:Name="btnupdateadd" Content="Add" MinWidth="100" Click="btnupdateadd_Click"/>
                    </Viewbox>
                </Grid>
            </Grid>
            <Grid x:Name="UsersGrid" Grid.Column="1" Visibility="Hidden">
                <Grid.RowDefinitions>
                    <RowDefinition Height="12*" />
                    <RowDefinition Height="60*" />
                    <RowDefinition Height="40*" />
                    <RowDefinition Height="10*" />
                </Grid.RowDefinitions>
                <Viewbox Grid.Row="0">
                    <Label  Content="Users" HorizontalAlignment="Center"/>
                </Viewbox>
                <Grid x:Name="UserList" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20*"/>
                        <ColumnDefinition Width="70*"/>
                        <ColumnDefinition Width="30*"/>
                    </Grid.ColumnDefinitions>
                    <ListBox x:Name="UsersList" Grid.Column="1" FontSize="20" ScrollViewer.VerticalScrollBarVisibility="Visible" MaxHeight="{Binding ElementName=CertList, Path=ActualHeight}" ItemsSource="{Binding Userslist}" SelectionChanged="UsersList_SelectionChanged"  />
                    <Grid x:Name="UserListButtons" Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Viewbox Grid.Row="1">
                            <Button x:Name="btnAddUser" Content="Add" MinWidth="60" Click="btnAddUser_Click" />
                        </Viewbox>
                        <Viewbox Grid.Row="2">
                            <Button x:Name="btnRmvUser" Content="Remove" MinWidth="60" Click="btnRmvUser_Click" />
                        </Viewbox>
                    </Grid>
                </Grid>
                <Grid x:Name="AddNewUser" Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40*"/>
                        <ColumnDefinition Width="60*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Viewbox Grid.Column="0" Grid.Row="0">
                        <Label Content="User Name:" />
                    </Viewbox>
                    <Viewbox Grid.Column="0" Grid.Row="1">
                        <Label Content="User Password:" />
                    </Viewbox>
                    <Viewbox Grid.Column="0" Grid.Row="2">
                        <Label Content="User Domain:" />
                    </Viewbox>
                    <Viewbox Grid.Column="0" Grid.Row="3">
                        <Label Content="User Password Never Expires:" />
                    </Viewbox>
                    <Viewbox Grid.Column="1" Grid.Row="0">
                        <TextBox MinWidth="160" HorizontalAlignment="Left" Text="{Binding UserName}" />
                    </Viewbox>

                    <Viewbox Grid.Column="1" Grid.Row="1">
                        <TextBox MinWidth="160" HorizontalAlignment="Left" Text="{Binding UserPassword}" />
                    </Viewbox>

                    <Viewbox Grid.Column="1" Grid.Row="2">
                        <TextBox MinWidth="160" HorizontalAlignment="Left" Text="{Binding UserDomain}" />
                    </Viewbox>

                    <Viewbox Grid.Column="1" Grid.Row="3">
                        <CheckBox IsChecked="{Binding UserPasswordNeverExpires}" />
                    </Viewbox>
                    <Viewbox Grid.Column="1" Grid.Row="5">
                        <Button x:Name="btnupdateadduser" Content="Add" MinWidth="100" RenderTransformOrigin="0.717,0.717" Click="btnupdateadduser_Click" />
                    </Viewbox>
                </Grid>
            </Grid>
            <Grid x:Name="EvarsGrid" Grid.Column="1" Visibility="Hidden">
                <Grid.RowDefinitions>
                    <RowDefinition Height="12*" />
                    <RowDefinition Height="60*" />
                    <RowDefinition Height="40*" />
                    <RowDefinition Height="10*" />
                </Grid.RowDefinitions>
                <Viewbox Grid.Row="0">
                    <Label  Content="Environment Variables" HorizontalAlignment="Center"/>
                </Viewbox>
                <Grid x:Name="EvarList" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20*"/>
                        <ColumnDefinition Width="70*"/>
                        <ColumnDefinition Width="30*"/>
                    </Grid.ColumnDefinitions>
                    <ListBox x:Name="EvarsList" Grid.Column="1" FontSize="20" ScrollViewer.VerticalScrollBarVisibility="Visible" MaxHeight="{Binding ElementName=CertList, Path=ActualHeight}" ItemsSource="{Binding Evarslist}" SelectionChanged="EvarsList_SelectionChanged"  />
                    <Grid x:Name="EvarListButtons" Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Viewbox Grid.Row="1">
                            <Button x:Name="btnAddEvar" Content="Add" MinWidth="60" Click="btnAddEvar_Click" />
                        </Viewbox>
                        <Viewbox Grid.Row="2">
                            <Button x:Name="btnRmvEvar" Content="Remove" MinWidth="60" Click="btnRmvEvar_Click" />
                        </Viewbox>
                    </Grid>
                </Grid>
                <Grid x:Name="AddNewEvar" Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40*"/>
                        <ColumnDefinition Width="60*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Viewbox Grid.Column="0" Grid.Row="0">
                        <Label Content="Name:" />
                    </Viewbox>
                    <Viewbox Grid.Column="0" Grid.Row="1">
                        <Label Content="Directory:" />
                    </Viewbox>
                    <Viewbox Grid.Column="0" Grid.Row="2">
                        <Label Content="Placement:" />
                    </Viewbox>
                    <Viewbox Grid.Column="0" Grid.Row="3">
                        <Label Content="Condition:" />
                    </Viewbox>
                    <Viewbox Grid.Column="1" Grid.Row="0">
                        <TextBox MinWidth="160" HorizontalAlignment="Left" Text="{Binding EVarName}" />
                    </Viewbox>

                    <Viewbox Grid.Column="1" Grid.Row="1">
                        <TextBox MinWidth="160" HorizontalAlignment="Left" Text="{Binding EVarDirectory}" />
                    </Viewbox>

                    <Viewbox Grid.Column="1" Grid.Row="2">
                        <ComboBox MinWidth="160" HorizontalAlignment="Left" SelectedValue="{Binding EVarPlacement}">
                            <sys:String>all</sys:String>
                            <sys:String>first</sys:String>
                            <sys:String>last</sys:String>
                        </ComboBox>
                    </Viewbox>

                    <Viewbox Grid.Column="1" Grid.Row="3">
                        <TextBox MinWidth="160" HorizontalAlignment="Left" Text="{Binding EVarCondition}" />
                    </Viewbox>
                    <Viewbox Grid.Column="1" Grid.Row="5">
                        <Button x:Name="btnupdateaddevar" Content="Add" MinWidth="100" RenderTransformOrigin="0.717,0.717" Click="btnupdateaddevar_Click" />
                    </Viewbox>
                </Grid>
            </Grid>
            <Grid x:Name="ElemsGrid" Grid.Column="1" Visibility="Hidden">
                <Grid.RowDefinitions>
                    <RowDefinition Height="12*" />
                    <RowDefinition Height="15*" />
                    <RowDefinition Height="80*" />
                    <RowDefinition Height="10*" />
                </Grid.RowDefinitions>
                <Viewbox Grid.Row="0">
                    <Label  Content="Wix Elements" HorizontalAlignment="Center"/>
                </Viewbox>
                <Grid x:Name="ElemList" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20*"/>
                        <ColumnDefinition Width="70*"/>
                        <ColumnDefinition Width="30*"/>
                    </Grid.ColumnDefinitions>
                    <ListBox x:Name="ElemsList" Grid.Column="1" FontSize="20" ScrollViewer.VerticalScrollBarVisibility="Visible" MaxHeight="{Binding ElementName=CertList, Path=ActualHeight}" ItemsSource="{Binding Elemlist}" SelectionChanged="ElemsList_SelectionChanged" />
                    <Grid x:Name="ElemListButtons" Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Viewbox Grid.Row="1" Grid.RowSpan="3">
                            <Button x:Name="btnAddElem" Content="Add" MinWidth="60" Click="btnAddElem_Click" />
                        </Viewbox>
                        <Viewbox Grid.Row="4" Grid.RowSpan="3">
                            <Button x:Name="btnRmvElem" Content="Remove" MinWidth="60" Click="btnRmvElem_Click" />
                        </Viewbox>
                    </Grid>
                </Grid>
                <Grid x:Name="AddNewElem" Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40*"/>
                        <ColumnDefinition Width="60*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
